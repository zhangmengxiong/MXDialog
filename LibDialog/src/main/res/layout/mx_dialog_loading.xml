<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mxRootLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mx_dialog_color_background_alpha"
    android:soundEffectsEnabled="false">

    <LinearLayout
        android:id="@+id/mxCardLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:background="@drawable/mx_dialog_card_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/mx_dialog_progress_img_size"
            android:layout_height="@dimen/mx_dialog_progress_img_size"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/mx_dialog_progress_loading"
            android:indeterminateDuration="1000"
            android:indeterminateTint="@color/mx_color_focus" />

        <TextView
            android:id="@+id/loadingTxv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:minEms="5"
            android:singleLine="true"
            android:text="正在加载中..."
            android:textColor="@color/mx_color_text"
            android:textSize="@dimen/mx_size_content" />
    </LinearLayout>
</FrameLayout>