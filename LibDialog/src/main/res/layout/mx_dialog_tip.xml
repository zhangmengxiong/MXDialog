<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mxRootLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mx_dialog_color_background_alpha"
    android:soundEffectsEnabled="false">

    <LinearLayout
        android:id="@+id/mxCardLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/mx_dialog_card_bg"
        android:orientation="vertical"
        android:soundEffectsEnabled="false">

        <LinearLayout
            android:id="@+id/titleLay"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp">

            <ImageView
                android:id="@+id/tipTypeImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/mx_dialog_icon_success" />

            <TextView
                android:id="@+id/titleTxv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="温馨提示"
                android:textColor="@color/mx_color_text"
                android:textSize="@dimen/mx_size_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/delayTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2 秒后消失"
                android:textColor="@color/mx_color_text_ticket"
                android:textSize="@dimen/mx_size_small"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mx_dialog_color_divider" />

        <com.mx.dialog.views.MXRatioFrameLayout
            android:id="@+id/contentLay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp" />

        <LinearLayout
            android:id="@+id/btnLay"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/mx_dialog_btn_bg"
            android:gravity="center"
            android:padding="@dimen/mx_size_divider_space">

            <TextView
                android:id="@+id/cancelBtn"
                style="@style/mx_dialog_style_inactive_btn"
                android:layout_marginRight="@dimen/mx_size_divider_space"
                android:text="取消" />

            <TextView
                android:id="@+id/okBtn"
                style="@style/mx_dialog_style_active_btn"
                android:text="确认" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>